<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/ic_spot_logo_ic"
            android:layout_width="23dp"
            android:layout_height="25dp"
            android:src="@drawable/study_spot_logo"
            app:layout_constraintBottom_toBottomOf="@+id/ic_spot_logo"
            app:layout_constraintStart_toEndOf="@+id/ic_spot_logo"
            app:layout_constraintTop_toTopOf="@+id/ic_spot_logo" />


        <ImageView
            android:id="@+id/ic_spot_logo"
            android:layout_width="74dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/fragment_house_spot_logo_tx"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/ic_alarm"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/activity_main_ic_alaram"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ic_find" />

        <ImageView
            android:id="@+id/ic_find"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/activity_main_ic_find"
            app:layout_constraintEnd_toStartOf="@+id/ic_alarm"
            app:layout_constraintTop_toTopOf="@+id/ic_spot_logo" />

        <ImageView
            android:id="@+id/ic_sun"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/activity_main_ic_sun"
            app:layout_constraintStart_toStartOf="@+id/ic_spot_logo"
            app:layout_constraintTop_toBottomOf="@+id/ic_spot_logo" />

        <TextView
            android:id="@+id/tx_temperature"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="31.0°C"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ic_sun"
            app:layout_constraintStart_toEndOf="@+id/ic_sun"
            app:layout_constraintTop_toTopOf="@+id/ic_sun" />

        <TextView
            android:id="@+id/tx_explain_weather"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="시원한 스팟에서 \n집중력을 발휘해보자 !"
            android:textColor="@color/gray_03"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@+id/ic_sun"
            app:layout_constraintTop_toBottomOf="@+id/ic_sun" />


        <ImageButton
            android:id="@+id/imgbtn_go_board"
            android:layout_width="210dp"
            android:layout_height="90dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/activity_main_imgbtn_go_board"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ic_sun" />

        <ImageButton
            android:id="@+id/imgbtn_location"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="40dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/activity_main_imgbtn_location"
            app:layout_constraintStart_toStartOf="@+id/tx_explain_weather"
            app:layout_constraintTop_toBottomOf="@+id/tx_explain_weather" />

        <ImageButton
            android:id="@+id/imgbtn_board"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="3dp"
            android:scaleType="centerCrop"
            android:background="@color/white"
            android:src="@drawable/activity_main_imgbtn_board"
            app:layout_constraintStart_toEndOf="@+id/imgbtn_location"
            app:layout_constraintTop_toTopOf="@+id/imgbtn_location"/>

        <ImageButton
            android:id="@+id/imgbtn_union"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="3dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/activity_main_imgbtn_union"
            app:layout_constraintStart_toEndOf="@+id/imgbtn_board"
            app:layout_constraintTop_toTopOf="@+id/imgbtn_location" />

        <ImageButton
            android:id="@+id/imgbtn_jjim"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="3dp"
            android:scaleType="centerCrop"
            android:background="@color/white"
            android:src="@drawable/activity_main_imgbtn_jjim"
            app:layout_constraintStart_toEndOf="@+id/imgbtn_union"
            app:layout_constraintTop_toTopOf="@+id/imgbtn_location"/>

        <TextView
            android:id="@+id/tx_interest_study"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="관심지역 스터디 BEST"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/imgbtn_location"
            app:layout_constraintTop_toBottomOf="@+id/imgbtn_location" />

        <ImageView
            android:id="@+id/ic_go_interest"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/activity_main_navigate_before"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tx_interest_study" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_board"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tx_interest_study"
            tools:listitem="@layout/item_recycler_view" />

        <TextView
            android:id="@+id/tx_recommendation_study"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="추천 스터디"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tx_interest_study"
            app:layout_constraintTop_toBottomOf="@+id/rv_board" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_board2"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_marginTop="15dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tx_recommendation_study"
            tools:listitem="@layout/item_recycler_view"/>

        <ImageView
            android:id="@+id/ic_go_recommendation"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/activity_main_navigate_before"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tx_recommendation_study" />


