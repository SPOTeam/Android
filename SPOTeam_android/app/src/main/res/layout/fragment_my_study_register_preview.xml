<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:id="@+id/fragment_my_study_register_preview_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/fragment_my_study_register_preview_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/fragment_my_study_register_preview_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스터디 만들기"
                android:textSize="16dp"
                android:fontFamily="@font/suit_bold"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_my_study_register_preview_fl"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_my_study_register_preview_ll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/fragment_my_study_register_preview_user_iv"
                android:layout_width="59dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_preview_profile"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerFamily.Cut" />

            <TextView
                android:id="@+id/fragment_detail_study_hello_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반가워요, "
                android:fontFamily="@font/suit_bold"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginStart="80dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="bottom"/>

            <TextView
                android:id="@+id/fragment_detail_study_username_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="훈님"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:fontFamily="@font/suit_bold"
                android:layout_marginStart="140dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="bottom" />


        </FrameLayout>
        <LinearLayout
            android:id="@+id/fragment_my_study_register_preview_member_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_my_study_register_preview_fl">


            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/study_small_people"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/fragment_my_study_register_preview_view_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:fontFamily="@font/suit_regular"
                android:layout_marginStart="5dp"/>
            <TextView
                android:id="@+id/fragment_detail_study_member_slash_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:fontFamily="@font/suit_regular"
                android:layout_marginStart="5dp" />
            <TextView
                android:id="@+id/fragment_detail_study_member_max_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:fontFamily="@font/suit_regular"
                android:layout_marginStart="5dp" />
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/study_like"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/fragment_detail_study_bookmark_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:fontFamily="@font/suit_regular"
                android:layout_marginStart="5dp"/>

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/study_view"
                android:layout_marginStart="20dp"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/fragment_detail_study_view_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="1"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:fontFamily="@font/suit_regular" />
        </LinearLayout>



        <TextView
            android:id="@+id/fragment_my_study_register_preview_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="토익 스피킹 IH 스터디"
            android:textColor="@color/black"
            android:textSize="17.3dp"
            android:fontFamily="@font/suit_bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_my_study_register_preview_member_ll"/>

        <TextView
            android:id="@+id/fragment_my_study_register_preview_goal_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="우리 스터디의 목표 한 문장"
            android:textSize="13dp"
            android:padding="7dp"
            android:textColor="@color/black"
            android:fontFamily="@font/suit_semi_bold"
            android:textFontWeight="600"
            android:background="@drawable/detail_study_background"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_my_study_register_preview_title_tv"/>

        <LinearLayout
            android:id="@+id/fragment_my_study_register_preview_group_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_my_study_register_preview_goal_tv">

            <TextView
                android:id="@+id/fragment_my_study_register_preview_chip_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취업/프로젝트"
                android:textSize="10.3dp"
                android:padding="7dp"
                android:textColor="@color/black"
                android:fontFamily="@font/suit_semi_bold"
                android:textFontWeight="600"
                android:background="@drawable/detail_study_background"/>

            <TextView
                android:id="@+id/fragment_my_study_register_preview_online_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오프라인"
                android:textSize="10.3dp"
                android:padding="7dp"
                android:textColor="@color/black"
                android:fontFamily="@font/suit_semi_bold"
                android:textFontWeight="600"
                android:background="@drawable/detail_study_background"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/fragment_my_study_register_preview_fee_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="무료"
                android:textSize="10.3dp"
                android:padding="7dp"
                android:fontFamily="@font/suit_semi_bold"
                android:textFontWeight="600"
                android:textColor="@color/black"
                android:background="@drawable/detail_study_background"
                android:layout_marginStart="5dp"/>
            <TextView
                android:id="@+id/fragment_my_study_register_preview_age_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25세 이하"
                android:textSize="10.3dp"
                android:fontFamily="@font/suit_semi_bold"
                android:padding="7dp"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:background="@drawable/detail_study_background"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/fragment_my_study_register_preview_tl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextAppearance="@style/CustomTabText"
            app:layout_constraintTop_toBottomOf="@id/fragment_my_study_register_preview_group_ll"
            app:tabMode="scrollable"
            app:tabGravity="fill"
            android:layout_marginTop="15dp"
            app:tabIndicatorColor="#186AFF"
            app:tabIndicatorFullWidth="false"
            app:tabRippleColor="#FFFFFFFF"
            app:tabSelectedTextColor="@color/black">
        </com.google.android.material.tabs.TabLayout>





        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/fragment_my_study_register_preview_vp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_my_study_register_preview_tl"/>

        <android.widget.Button
            android:id="@+id/fragment_my_study_register_preview_register_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_background"
            android:enabled="true"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:text="스터디 만들기"
            android:fontFamily="@font/suit_bold"
            android:textColor="@drawable/button_textcolor"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>