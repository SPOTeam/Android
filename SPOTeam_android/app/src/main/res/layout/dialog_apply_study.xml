<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="310dp"
    android:layout_gravity="center"
    android:background="@drawable/dialog_rounded_background">

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_new_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/dialog_complete_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="스터디 참여하기"
        android:textColor="#000000"
        android:fontFamily="@font/suit_bold"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/dialog_complete_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="한 번 신청한 스터디는 취소가 불가하니\n신중하게 신청해주세요."
        android:textColor="@color/black"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:fontFamily="@font/suit_semi_bold"
        android:textSize="13.5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_complete_title_tv" />

    <EditText
        android:id="@+id/fragment_introduce_studyname_et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:maxLines="1"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="15dp"
        android:maxLength="20"
        android:fontFamily="@font/suit_semi_bold"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_complete_content_tv"/>

    <TextView
        android:id="@+id/dialog_short_introduce_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="스터디에 참여하고자 하는 이유, 자기소개 등 간단하게\n작성해주세요."
        android:textColor="@color/g400"
        android:lineSpacingExtra="4dp"
        android:fontFamily="@font/suit_semi_bold"
        android:textSize="12dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_introduce_studyname_et" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_complete_bt"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="15dp"
        android:paddingStart="35dp"
        android:paddingEnd="35dp"
        android:background="@drawable/button_background"
        android:text="신청"
        android:fontFamily="@font/suit_semi_bold"
        android:textColor="@color/b500"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>