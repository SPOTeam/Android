<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_bar"
        android:layout_width="5dp"
        android:layout_height="23dp"
        android:layout_marginEnd="5dp"
        android:background="#D6E5FF"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/eventsTextView"
        app:layout_constraintEnd_toStartOf="@+id/eventsTextView" />


    <TextView
        android:id="@+id/eventsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="할 일"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tx_date" />

    <ImageView
        android:id="@+id/ic_check"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/fragment_calendar_ic_check"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/eventsTextView"
        app:layout_constraintTop_toTopOf="@+id/eventsTextView" />

    <TextView
        android:id="@+id/tx_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="200dp"
        android:background="#F8F8F8"
        android:text="일시"
        android:textColor="#186AFF"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />

    <TextView
        android:id="@+id/tx_startdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="시작 시간"
        android:textColor="#555555"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@+id/tx_date"
        app:layout_constraintTop_toTopOf="@+id/tx_date" />

    <TextView
        android:id="@+id/tx_tilde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="~"
        android:textColor="#555555"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@+id/tx_startdate"
        app:layout_constraintTop_toTopOf="@+id/tx_startdate" />


    <TextView
        android:id="@+id/tx_enddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="끝나는 시간"
        android:textColor="#555555"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/tx_startdate"
        app:layout_constraintStart_toEndOf="@+id/tx_tilde" />

