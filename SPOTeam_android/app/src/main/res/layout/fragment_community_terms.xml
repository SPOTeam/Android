            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terms_section_first"
            android:fontFamily="@font/suit_variable_font"
            android:textFontWeight="600"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="@id/terms_title_tv"
            app:layout_constraintTop_toBottomOf="@id/terms_title_tv"/>

        <!--    제1조    -->
        <TextView
            android:id="@+id/terms_first_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/suit_variable_font"
            android:text="@string/terms_first_title"
            android:textColor="@color/black"
            android:textFontWeight="600"
