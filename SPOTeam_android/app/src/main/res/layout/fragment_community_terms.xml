        <TextView
            android:id="@+id/terms_first_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terms_first_content"
            android:fontFamily="@font/suit_variable_font"
            android:textFontWeight="500"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_marginStart="9dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@id/terms_first_title_tv"
            app:layout_constraintTop_toBottomOf="@id/terms_first_title_tv"
