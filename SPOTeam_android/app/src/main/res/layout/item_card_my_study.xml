<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="152dp"
    android:layout_height="165dp"
    android:orientation="horizontal"
    android:background="@drawable/item_mypage_study">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/suit_variable_font"
        android:text="Sample Study"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/suit_variable_font"
        android:text="Sample Study Accomplishment"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="29dp"
        android:fontFamily="@font/suit_variable_font"
        android:text="2025.04.23"
        android:textColor="@color/g400"
        android:textFontWeight="400"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suit_variable_font"
        android:text="- 2025.04.30"
        android:textColor="@color/g400"
        android:textFontWeight="400"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_start_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_start_time" />

</androidx.constraintlayout.widget.ConstraintLayout>