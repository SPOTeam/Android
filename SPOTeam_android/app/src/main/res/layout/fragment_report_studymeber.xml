<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_bottomdialog"
    android:padding="10dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <TextView
        android:id="@+id/take_attendance_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="스터디원 신고"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    X 이미지 변경    -->
    <ImageView
        android:id="@+id/write_content_prev_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_x_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/take_attendance_title_tv" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="신고하고자 하는 스터디원을 선택 후, 이유를 작성해주세요.\n SPOT이  살핀 후 탈퇴 신청을 용인합니다."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/take_attendance_title_tv" />

    <TableLayout
        android:id="@+id/member_tl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/take_attendance_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:stretchColumns="0,1,2,3,4,5">

        <TableRow>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/host_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_host_profile" />

                <TextView
                    android:id="@+id/host_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="닉네임 1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/crew1_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_normal_study_profile" />

                <TextView
                    android:id="@+id/crew1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="닉네임 2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/crew2_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_normal_study_profile" />

                <TextView
                    android:id="@+id/crew2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="닉네임 3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/crew3_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_normal_study_profile" />

                <TextView
                    android:id="@+id/crew3_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="닉네임 4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/crew4_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_normal_study_profile" />

                <TextView
                    android:id="@+id/crew4_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="닉네임 5" />
            </LinearLayout>
        </TableRow>

        <TableRow>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/crew5_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_normal_study_profile" />

                <TextView
                    android:id="@+id/crew5_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="닉네임 6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/crew6_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_normal_study_profile" />

                <TextView
                    android:id="@+id/crew6_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="닉네임 7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/crew7_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_normal_study_profile" />

                <TextView
                    android:id="@+id/crew7_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="닉네임 8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/crew8_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_normal_study_profile" />

                <TextView
                    android:id="@+id/crew8_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="닉네임 9"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/crew9_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_normal_study_profile"
                    android:background="@drawable/user_avatar_background" />

                <TextView
                    android:id="@+id/crew9_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="닉네임 10" />
            </LinearLayout>
        </TableRow>
    </TableLayout>


    <ImageView
        android:id="@+id/ic_small_check"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/fragment_report_studymember_ic_small_check"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/member_tl" />

    <TextView
        android:id="@+id/tx_report_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="200dp"
        android:visibility="gone"
        android:text="신고 완료"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_small_check" />


    <TextView
        android:id="@+id/tx_reason_report"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:paddingVertical="3dp"
        android:text="신고 이유"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/member_tl" />

    <EditText
        android:id="@+id/popup_edit_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/my_edittext_background"
        android:hint="이유를 작성해주세요."
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="@+id/tx_reason_report"
        app:layout_constraintTop_toBottomOf="@+id/tx_reason_report" />

    <ImageButton
        android:id="@+id/imgbtn_report"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:background="#00ff0000"
        android:scaleType="fitCenter"
        android:src="@drawable/fragment_report_studymember_imgbtn_complete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_edit_text" />


</androidx.constraintlayout.widget.ConstraintLayout>