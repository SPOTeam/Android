<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="60dp"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_interest_recyclerv_item"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:layout_margin="8dp">
    
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_preview_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:strokeWidth="0.3dp"
        app:strokeColor="@color/g300"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerFamily.Cut1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/delete_image_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_x_button"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@+id/image_preview_iv"
        app:layout_constraintEnd_toEndOf="@+id/image_preview_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>