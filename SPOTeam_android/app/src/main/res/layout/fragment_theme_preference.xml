<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mypage.ThemePreferenceFragment">

    <LinearLayout
        android:id="@+id/fragment_theme_preference_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp">

        <ImageView
            android:id="@+id/fragment_theme_preference_back_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow"/>

        <TextView
            android:id="@+id/fragment_theme_preference_mypage_tv"
            android:text="관심 분야"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/suit_variable_font"
            android:textFontWeight="600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="20dp"/>

    </LinearLayout>



    <TextView
        android:id="@+id/fragment_theme_preference_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내가 원하는 스터디를 선택해주세요!"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:fontFamily="@font/suit_bold"
        android:layout_marginTop="54dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_theme_preference_ll"/>




    <GridLayout
        android:id="@+id/fragment_register_study_chipgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="5"
        android:orientation="horizontal"
        android:layout_marginTop="43.2dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_theme_preference_tv">

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_language"
            style="@style/CustomChipStyle2"
            android:layout_width="0dp"
            android:layout_height="66.67dp"
            app:chipMinHeight="66.67dp"
            android:layout_columnWeight="1"
            android:text="어학"
            android:textSize="16dp"
            android:textAlignment="center"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="7dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_license"
            style="@style/CustomChipStyle2"
            android:layout_width="0dp"
            android:layout_height="66.67dp"
            app:chipMinHeight="66.67dp"
            android:layout_columnWeight="1"
            android:text="자격증"
            android:textSize="16dp"
            android:textAlignment="center"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="7dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_job"
            style="@style/CustomChipStyle2"
            android:layout_width="0dp"
            android:layout_height="66.67dp"
            app:chipMinHeight="66.67dp"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:text="취업"
            android:fontFamily="@font/suit_variable"
            android:textSize="16dp"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_discussion"
            style="@style/CustomChipStyle2"
            android:layout_width="0dp"
            android:layout_height="66.67dp"
            app:chipMinHeight="66.67dp"
            android:layout_columnWeight="1"
            android:text="토론"
            android:textAlignment="center"
            android:fontFamily="@font/suit_variable"
            android:textSize="16dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_news"
            style="@style/CustomChipStyle2"
            android:layout_width="0dp"
            android:layout_height="66.67dp"
            app:chipMinHeight="66.67dp"
            android:layout_columnWeight="1"
            android:text="시사/뉴스"
            android:textAlignment="center"
            android:fontFamily="@font/suit_variable"
            android:textSize="16dp"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_selfstudy"
            style="@style/CustomChipStyle2"
            android:layout_width="0dp"
            android:layout_height="66.67dp"
            app:chipMinHeight="66.67dp"
            android:layout_columnWeight="1"
            android:text="자율 학습"
            android:textAlignment="center"
            android:fontFamily="@font/suit_variable"
            android:textSize="16dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_project"
            style="@style/CustomChipStyle2"
            android:layout_width="0dp"
            android:layout_height="66.67dp"
            app:chipMinHeight="66.67dp"
            android:layout_columnWeight="1"
            android:text="프로젝트"
            android:textAlignment="center"
            android:fontFamily="@font/suit_variable"
            android:textSize="16dp"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_exhibit"
            style="@style/CustomChipStyle2"
            android:layout_width="0dp"
            android:layout_height="66.67dp"
            app:chipMinHeight="66.67dp"
            android:layout_columnWeight="1"
            android:text="공모전"
            android:textAlignment="center"
            android:fontFamily="@font/suit_variable"
            android:textSize="16dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_major"
            style="@style/CustomChipStyle2"
            android:layout_width="0dp"
            android:layout_height="66.67dp"
            app:chipMinHeight="66.67dp"
            android:layout_columnWeight="1"
            android:text="전공/진로학습"
            android:fontFamily="@font/suit_variable"
            android:textSize="16dp"
            android:textAlignment="center"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_etc"
            style="@style/CustomChipStyle2"
            android:layout_width="0dp"
            android:layout_height="66.67dp"
            app:chipMinHeight="66.67dp"
            android:layout_columnWeight="1"
            android:text="기타"
            android:textAlignment="center"
            android:fontFamily="@font/suit_variable"
            android:textSize="16dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"/>
    </GridLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone">

        <android.widget.Button
            android:id="@+id/editTheme_cancel_bt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/cancel_bg"
            android:enabled="true"
            android:text="취소"
            android:textColor="@color/g500"
            android:textSize="17dp"
            android:fontFamily="@font/suit_bold" />

        <android.widget.Button
            android:id="@+id/editTheme_finish_bt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/finish_bg"
            android:enabled="false"
            android:text="완료"
            android:textColor="@color/b500"
            android:textSize="17dp"
            android:fontFamily="@font/suit_bold"/>
    </LinearLayout>

    <android.widget.Button
        android:id="@+id/fragment_theme_preference_edit_bt"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:enabled="true"
        android:text="수정"
        android:fontFamily="@font/suit_bold"
        android:textColor="@color/b500"
        android:textSize="16dp"
        android:textStyle="bold"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>