<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/content_index_tv"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:text="01"
        android:textSize="14sp"
        android:textFontWeight="800"
        android:textColor="@color/active_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/content_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="4학년 취준생들은 요즘 뭐하고 사니"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:textFontWeight="800"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/content_index_tv"
        app:layout_constraintEnd_toEndOf="@id/content_bracket_l"/>

    <TextView
        android:id="@+id/content_bracket_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="("
        android:textSize="14sp"
        android:textColor="@color/active_blue"
        android:textFontWeight="800"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/content_commentNum_tv"/>
    <TextView
        android:id="@+id/content_commentNum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.1K"
        android:textSize="14sp"
        android:textFontWeight="800"
        android:textColor="@color/active_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/content_bracket_R"/>
    <TextView
        android:id="@+id/content_bracket_R"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=")"
        android:textSize="14sp"
        android:textFontWeight="800"
        android:textColor="@color/active_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>