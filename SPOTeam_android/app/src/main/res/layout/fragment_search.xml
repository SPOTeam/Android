<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:queryHint="스터디 검색"
        app:searchIcon="@drawable/location_search_resize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </androidx.appcompat.widget.SearchView>

<!--    <com.google.android.material.textfield.TextInputEditText-->
<!--        android:id="@+id/activity_location_search_et"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:background="@drawable/checklist_location_search_background"-->
<!--        android:drawableEnd="@drawable/location_search_resize"-->
<!--        android:hint="○○시, ○○구,○○동"-->
<!--        android:maxLines="1"-->
<!--        android:padding="10dp"-->
<!--        android:textSize="16sp" />-->


    <TextView
        android:id="@+id/tx_recently_searched_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="최근 검색어"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tx_recently_viewed_study"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingStart="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_recently_searched_word"
        app:singleLine="true">
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/tx_populared_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인기 검색어"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tx_recently_searched_word"
        app:layout_constraintTop_toBottomOf="@+id/chipGroup" />


    <TextView
        android:id="@+id/tx_recently_viewed_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:text="최근 본 스터디"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/rv_board"
        app:layout_constraintTop_toBottomOf="@+id/tx_populared_word" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_board"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_recently_viewed_study"></androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/tx_recommendation_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="추천 스터디"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/rv_board2"
        app:layout_constraintTop_toBottomOf="@+id/rv_board" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_board2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_recommendation_study" />


</androidx.constraintlayout.widget.ConstraintLayout>