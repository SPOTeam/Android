<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bottomdialog">

    <FrameLayout
        android:id="@+id/framelayout_recently"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingTop="10dp"
        android:background="@drawable/interest_filter_frame_layout_bottom_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_recently"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="20dp"
            android:text="최신 순"
            android:textColor="@color/black"
            android:textFontWeight="700"
            android:textSize="16dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/framelayout_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/interest_filter_frame_layout_bottom_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/framelayout_recently">

        <TextView
            android:id="@+id/tv_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="20dp"
            android:text="조회 수 높은 순"
            android:textColor="@color/black"
            android:textFontWeight="700"
            android:textSize="16dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/framelayout_hot"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/interest_filter_frame_layout_bottom_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/framelayout_view">

        <TextView
            android:id="@+id/tv_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="20dp"
            android:text="조회 수 높은 순"
            android:textColor="@color/black"
            android:textFontWeight="700"
            android:textSize="16dp" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>