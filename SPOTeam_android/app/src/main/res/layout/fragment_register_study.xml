<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/fragment_register_study_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp">

        <ImageView
            android:id="@+id/fragment_register_study_back_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow"/>

        <TextView
            android:id="@+id/fragment_register_study_tv"
            android:text="스터디 만들기"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/suit_semi_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="20dp"/>

    </LinearLayout>



    <ProgressBar
        android:id="@+id/fragment_register_study_pb"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#D8D8D8"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_register_study_ll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/fragment_register_wantstudy_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어떤 스터디를 하고 싶나요?"
        android:textColor="@color/black"
        android:fontFamily="@font/suit_bold"
        android:textSize="17dp"
        android:layout_marginTop="36dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_register_study_pb"/>

    <GridLayout
        android:id="@+id/fragment_register_study_chipgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="5"
        android:orientation="horizontal"
        android:layout_marginTop="43.2dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_register_wantstudy_tv">

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_language"
            style="@style/CustomChipStyle2"
            android:layout_width="0dp"
            android:layout_height="66.67dp"
            app:chipMinHeight="66.67dp"
            android:layout_columnWeight="1"
            android:text="어학"
            android:fontFamily="@font/suit_bold"
            android:textSize="17dp"
            android:textAlignment="center"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="7dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_license"
            style="@style/CustomChipStyle2"
            android:layout_width="0dp"
            android:layout_height="66.67dp"
            app:chipMinHeight="66.67dp"
            android:layout_columnWeight="1"
            android:text="자격증"
            android:fontFamily="@font/suit_bold"
            android:textSize="17dp"
            android:textAlignment="center"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="7dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_job"
            style="@style/CustomChipStyle2"
            android:layout_width="0dp"
            android:layout_height="66.67dp"
            app:chipMinHeight="66.67dp"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:text="취업"
            android:fontFamily="@font/suit_bold"
            android:textSize="17dp"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_discussion"
            style="@style/CustomChipStyle2"
            android:layout_width="0dp"
            android:layout_height="66.67dp"
            app:chipMinHeight="66.67dp"
            android:layout_columnWeight="1"
            android:text="토론"
            android:textAlignment="center"
            android:fontFamily="@font/suit_bold"
            android:textSize="17dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_news"
            style="@style/CustomChipStyle2"
            android:layout_width="0dp"
            android:layout_height="66.67dp"
            app:chipMinHeight="66.67dp"
            android:layout_columnWeight="1"
            android:text="시사/뉴스"
            android:textAlignment="center"
            android:fontFamily="@font/suit_bold"
            android:textSize="17dp"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_selfstudy"
            style="@style/CustomChipStyle2"
            android:layout_width="0dp"
            android:layout_height="66.67dp"
            app:chipMinHeight="66.67dp"
            android:layout_columnWeight="1"
            android:text="자율 학습"
            android:textAlignment="center"
            android:fontFamily="@font/suit_bold"
            android:textSize="17dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_project"
            style="@style/CustomChipStyle2"
            android:layout_width="0dp"
            android:layout_height="66.67dp"
            app:chipMinHeight="66.67dp"
            android:layout_columnWeight="1"
            android:text="프로젝트"
            android:textAlignment="center"
            android:fontFamily="@font/suit_bold"
            android:textSize="17dp"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_exhibit"
            style="@style/CustomChipStyle2"
            android:layout_width="0dp"
            android:layout_height="66.67dp"
            app:chipMinHeight="66.67dp"
            android:layout_columnWeight="1"
            android:text="공모전"
            android:textAlignment="center"
            android:fontFamily="@font/suit_bold"
            android:textSize="17dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_major"
            style="@style/CustomChipStyle2"
            android:layout_width="0dp"
            android:layout_height="66.67dp"
            app:chipMinHeight="66.67dp"
            android:layout_columnWeight="1"
            android:text="전공/진로학습"
            android:fontFamily="@font/suit_bold"
            android:textSize="17dp"
            android:textAlignment="center"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_etc"
            style="@style/CustomChipStyle2"
            android:layout_width="0dp"
            android:layout_height="66.67dp"
            app:chipMinHeight="66.67dp"
            android:layout_columnWeight="1"
            android:text="기타"
            android:textAlignment="center"
            android:fontFamily="@font/suit_bold"
            android:textSize="17dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"/>
    </GridLayout>


    <android.widget.Button
        android:id="@+id/fragment_register_study_bt"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_background"
        android:enabled="false"
        android:text="다음"
        android:fontFamily="@font/suit_bold"
        android:textColor="@drawable/button_textcolor"
        android:textSize="17dp"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
