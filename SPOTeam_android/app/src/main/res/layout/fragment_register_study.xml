<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/fragment_register_study_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/fragment_register_study_tv"
            android:text="스터디 등록"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:drawableStart="@drawable/ic_arrow"
            android:drawablePadding="20dp"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/fragment_register_study_pb"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#D8D8D8"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_register_study_ll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/fragment_register_wantstudy_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어떤 스터디를 하고 싶나요?"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_register_study_pb"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/fragment_register_study_chipgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_register_wantstudy_tv"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:chipSpacingHorizontal="12dp"
        app:singleLine="false">

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_language"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어학"
            android:textSize="16sp"
            app:chipStartPadding="15dp"
            app:chipEndPadding="15dp"
            app:chipMinHeight="40dp"/>


        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_license"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자격증"
            android:textSize="16sp"
            app:chipStartPadding="15dp"
            app:chipEndPadding="15dp"
            app:chipMinHeight="40dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_job"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취업"
            android:textSize="16sp"
            app:chipStartPadding="15dp"
            app:chipEndPadding="15dp"
            app:chipMinHeight="40dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_discussion"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="토론"
            android:textSize="16sp"
            app:chipStartPadding="15dp"
            app:chipEndPadding="15dp"
            app:chipMinHeight="40dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_news"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시사/뉴스"
            android:textSize="16sp"
            app:chipStartPadding="15dp"
            app:chipEndPadding="15dp"
            app:chipMinHeight="40dp"/>


        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_selfstudy"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자율 학습"
            android:textSize="16sp"
            app:chipStartPadding="15dp"
            app:chipEndPadding="15dp"
            app:chipMinHeight="40dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_project"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로젝트"
            android:textSize="16sp"
            app:chipStartPadding="15dp"
            app:chipEndPadding="15dp"
            app:chipMinHeight="40dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_exhibit"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공모전"
            android:textSize="16sp"
            app:chipStartPadding="15dp"
            app:chipEndPadding="15dp"
            app:chipMinHeight="40dp"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_major"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전공/진로학습"
            android:textSize="16sp"
            app:chipStartPadding="15dp"
            app:chipEndPadding="15dp"
            app:chipMinHeight="40dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/fragment_register_study_chip_etc"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기타"
            android:textSize="16sp"
            app:chipStartPadding="15dp"
            app:chipEndPadding="15dp"
            app:chipMinHeight="40dp"/>


    </com.google.android.material.chip.ChipGroup>


    <android.widget.Button
        android:id="@+id/fragment_register_study_bt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_background"
        android:enabled="false"
        android:text="다음"
        android:textColor="@drawable/button_textcolor"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
