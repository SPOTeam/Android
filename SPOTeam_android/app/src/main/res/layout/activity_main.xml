<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/main_frm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/main_bnv"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/main_floatingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/icon_write"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/main_bnv"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/main_bnv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:labelVisibilityMode="unlabeled"
            app:itemIconSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu" />

        <FrameLayout
            android:id="@+id/activity_main_study_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/activity_main_study"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/main_bnv">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/activity_main_mystudy_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/activity_main_mystudy_resize"
                    android:background="@drawable/activity_main_mystudy_background"
                    android:layout_marginEnd="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="13dp"
                    android:paddingEnd="13dp"/>

                <ImageButton
                    android:id="@+id/activity_main_registerstudy_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/activity_main_register_study_resize"
                    android:background="@drawable/activity_main_registerstudy_background"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="13dp"
                    android:paddingEnd="13dp"/>
            </LinearLayout>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/mainCategoryBar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:layout_gravity="start"
        android:background="@drawable/category_appbar_btn_up_right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/category_appbar_btn_up_right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/language_btn"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="@drawable/category_background"
                android:textSize="15sp"
                android:text="어학"
                android:textColor="@drawable/button_textcolor"
                android:gravity="center"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/license_btn"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="자격증"
                android:textColor="@drawable/button_textcolor"
                android:gravity="center"
                android:background="@drawable/category_background"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/job_btn"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="취업"
                android:textColor="@drawable/button_textcolor"
                android:gravity="center"
                android:background="@drawable/category_background"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/discuss_btn"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="토론"
                android:textColor="@drawable/button_textcolor"
                android:gravity="center"
                android:background="@drawable/category_background"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/news_btn"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="시사/뉴스"
                android:textColor="@drawable/button_textcolor"
                android:gravity="center"
                android:background="@drawable/category_background"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/freeStudy_btn"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="자율 학습"
                android:textColor="@drawable/button_textcolor"
                android:gravity="center"
                android:background="@drawable/category_background"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/project_btn"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="프로젝트"
                android:textColor="@drawable/button_textcolor"
                android:gravity="center"
                android:background="@drawable/category_background"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/competition_btn"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="공모전"
                android:textColor="@drawable/button_textcolor"
                android:gravity="center"
                android:background="@drawable/category_background"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/majorStudy_btn"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="전공/진로 학습"
                android:textColor="@drawable/button_textcolor"
                android:gravity="center"
                android:background="@drawable/category_background"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/rest_btn"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="기타"
                android:textColor="@drawable/button_textcolor"
                android:gravity="center"
                android:background="@drawable/category_background" />
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
