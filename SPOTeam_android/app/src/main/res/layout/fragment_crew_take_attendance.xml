<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottomsheetfragment_style"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <TextView
        android:id="@+id/take_attendance_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="출석체크"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    X 이미지 변경    -->
    <ImageView
        android:id="@+id/write_content_prev_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_x_button"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/take_attendance_title_tv" />

    <TextView
        android:id="@+id/timer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_timer"
        android:text="05:00"
        android:paddingVertical="5dp"
        android:paddingHorizontal="15dp"
        android:textStyle="bold"
        android:textColor="@color/active_blue"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/take_attendance_title_tv"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="퀴즈의 정답을 맞추면 출석됩니다."
        app:layout_constraintTop_toBottomOf="@id/timer_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TableLayout
        android:id="@+id/member_tl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/take_attendance_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:stretchColumns="0,1,2,3,4,5">

        <TableRow>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/host_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_host_profile" />

                <TextView
                    android:id="@+id/host_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="닉네임" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/crew1_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_host_profile" />

                <TextView
                    android:id="@+id/crew1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="닉네임" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/crew2_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_host_profile" />

                <TextView
                    android:id="@+id/crew2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="닉네임" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/crew3_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_host_profile" />

                <TextView
                    android:id="@+id/crew3_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="닉네임" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/crew4_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_host_profile" />

                <TextView
                    android:id="@+id/crew4_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="닉네임" />
            </LinearLayout>
        </TableRow>

        <TableRow>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/crew5_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_host_profile" />

                <TextView
                    android:id="@+id/crew5_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="닉네임" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/crew6_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_host_profile" />

                <TextView
                    android:id="@+id/crew6_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="닉네임" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/crew7_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_host_profile" />

                <TextView
                    android:id="@+id/crew7_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="닉네임" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/crew8_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_host_profile" />

                <TextView
                    android:id="@+id/crew8_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="닉네임" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/crew9_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_host_profile" />

                <TextView
                    android:id="@+id/crew9_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="닉네임" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/sp_iv"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:src="@drawable/line_img"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/member_tl"
        app:layout_constraintEnd_toEndOf="@id/member_tl"
        app:layout_constraintTop_toBottomOf="@id/member_tl"/>


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="출석 체크"
        android:textSize="25sp"
        android:background="@drawable/button_background"
        android:textColor="@drawable/button_textcolor"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingVertical="3dp"
        android:layout_marginBottom="180dp"
        app:layout_constraintStart_toStartOf="@id/member_tl"
        app:layout_constraintEnd_toEndOf="@id/member_tl"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>