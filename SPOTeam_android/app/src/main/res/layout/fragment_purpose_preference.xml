<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mypage.PurposePreferenceFragment">

    <LinearLayout
        android:id="@+id/fragment_reason_preference_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp">

        <ImageView
            android:id="@+id/fragment_reason_preference_back_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow"/>

        <TextView
            android:id="@+id/fragment_reason_preference_mypage_tv"
            android:text="내 목표"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/suit_semi_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="20dp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/fragment_reason_preference_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내가 스터디를 하는 이유는 무엇인가요?"
        android:textColor="@color/black"
        android:textSize="17.28dp"
        android:fontFamily="@font/suit_bold"
        android:layout_marginTop="54dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_reason_preference_ll"/>





    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexbox_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="43.2dp"
        android:layout_marginEnd="20dp"
        app:flexDirection="column"
        app:flexWrap="nowrap"
        app:justifyContent="flex_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_reason_preference_tv">

        <com.google.android.material.chip.Chip
            android:id="@+id/activity_checklist_studypurpose_chip_habit"
            style="@style/CustomChipStyle"
            android:layout_width="match_parent"
            android:layout_height="47.52dp"
            android:fontFamily="@font/suit_variable_font"
            android:text="꾸준한 학습, 습관이 필요해요."
            android:textAlignment="center"
            android:textFontWeight="600"
            android:textSize="17.2dp"
            app:chipMinHeight="47.52dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/activity_checklist_studypurpose_chip_feedback"
            style="@style/CustomChipStyle"
            android:layout_width="match_parent"
            android:layout_height="47.52dp"
            android:layout_marginTop="18.72dp"
            android:fontFamily="@font/suit_variable_font"
            android:text="상호 피드백이 필요해요."
            android:textAlignment="center"
            android:textFontWeight="600"
            android:textSize="17.2dp"
            app:chipMinHeight="47.52dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/activity_checklist_studypurpose_chip_network"
            style="@style/CustomChipStyle"
            android:layout_width="match_parent"
            android:layout_height="47.52dp"
            android:layout_marginTop="18.72dp"
            android:fontFamily="@font/suit_variable_font"
            android:text="네트워킹을 하고 싶어요."
            android:textAlignment="center"
            android:textFontWeight="600"
            android:textSize="17.2dp"
            app:chipMinHeight="47.52dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/activity_checklist_studypurpose_chip_license"
            style="@style/CustomChipStyle"
            android:layout_width="match_parent"
            android:layout_height="47.52dp"
            android:layout_marginTop="18.72dp"
            android:fontFamily="@font/suit_variable_font"
            android:text="자격증을 취득하고 싶어요."
            android:textAlignment="center"
            android:textFontWeight="600"
            android:textSize="17.2dp"
            app:chipMinHeight="47.52dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/activity_checklist_studypurpose_chip_contest"
            style="@style/CustomChipStyle"
            android:layout_width="match_parent"
            android:layout_height="47.52dp"
            android:layout_marginTop="18.72dp"
            android:fontFamily="@font/suit_variable_font"
            android:text="대회에 참가하여 수상하고 싶어요."
            android:textAlignment="center"
            android:textFontWeight="600"
            android:textSize="17.2dp"
            app:chipMinHeight="47.52dp" />


        <com.google.android.material.chip.Chip
            android:id="@+id/activity_checklist_studypurpose_chip_opinion"
            style="@style/CustomChipStyle"
            android:layout_width="match_parent"
            android:layout_height="47.52dp"
            android:layout_marginTop="18.72dp"
            android:fontFamily="@font/suit_variable_font"
            android:text="다양한 의견을 나누고 싶어요."
            android:textAlignment="center"
            android:textFontWeight="600"
            android:textSize="17.2dp"
            app:chipMinHeight="47.52dp" />
    </com.google.android.flexbox.FlexboxLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone">

        <android.widget.Button
            android:id="@+id/editPurpose_cancel_bt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/cancel_bg"
            android:enabled="true"
            android:text="취소"
            android:textColor="@color/g500"
            android:textSize="17dp"
            android:fontFamily="@font/suit_bold" />

        <android.widget.Button
            android:id="@+id/editPurpose_finish_bt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/finish_bg"
            android:enabled="false"
            android:text="완료"
            android:textColor="@color/b500"
            android:textSize="17dp"
            android:fontFamily="@font/suit_bold"/>
    </LinearLayout>

    <android.widget.Button
        android:id="@+id/fragment_purpose_preference_edit_bt"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:enabled="true"
        android:text="수정"
        android:fontFamily="@font/suit_bold"
        android:textColor="@color/b500"
        android:textSize="16dp"
        android:textStyle="bold"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>