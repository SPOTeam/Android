<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="368dp"
    android:layout_height="248dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="20dp"
    android:paddingTop="18dp"
    android:paddingBottom="16dp"
    android:background="@drawable/alert_background">

    <ImageView
        android:id="@+id/ic_x_iv"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_report_crew"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alert_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스터디원 신고"
        android:fontFamily="@font/pretendard"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_x_iv"/>

    <TextView
        android:id="@+id/description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="탈퇴의 이유가 충분한 스터디원이 있나요?\n호스트의 권한으로 스터디원을 신고할 수 있어요"
        android:fontFamily="@font/pretendard"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alert_tv"/>

    <LinearLayout
        android:id="@+id/choose_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/description_tv">

        <TextView
            android:id="@+id/report_crew_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신고"
            android:fontFamily="@font/pretendard"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_wrong_backgground"
            android:textColor="@color/red"
            android:layout_marginEnd="8dp"
            android:paddingHorizontal="60dp"
            android:paddingVertical="12dp" />

        <TextView
            android:id="@+id/report_crew_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:fontFamily="@font/pretendard"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_disabled"
            android:textColor="#555555"
            android:paddingHorizontal="60dp"
            android:paddingVertical="12dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>