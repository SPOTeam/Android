<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="255dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="18dp"
    android:background="@drawable/alert_background">

    <ImageView
        android:id="@+id/attend_reject_close"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_x_button"
        app:tint="@color/black"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/ic_x_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_new_sad"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/attend_reject_close" />

    <TextView
        android:id="@+id/alert_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="불참하시겠습니까?"
        android:fontFamily="@font/suit_semi_bold"
        android:textFontWeight="700"
        android:textSize="21sp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_x_iv"/>

    <TextView
        android:id="@+id/description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="신청했던 스터디를 참여 취소하면\n다시 결정을 번복할 수 없어요."
        android:textFontWeight="800"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:lineSpacingExtra="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alert_tv"/>

    <LinearLayout
        android:id="@+id/choose_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/description_tv">

        <TextView
            android:id="@+id/attendance_reject_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="불참"
            android:fontFamily="@font/suit_semi_bold"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_wrong_backgground"
            android:textColor="@drawable/button_red_text_color"
            android:textFontWeight="700"
            android:layout_marginEnd="10dp"
            android:paddingHorizontal="65dp"
            android:paddingVertical="12dp"
            android:elevation="2dp"/>

        <TextView
            android:id="@+id/attendance_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:fontFamily="@font/suit_semi_bold"
            android:textFontWeight="700"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/selector_cancel_background"
            android:textColor="@drawable/selector_cancel_text"
            android:paddingHorizontal="65dp"
            android:paddingVertical="12dp"
            android:elevation="2dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>