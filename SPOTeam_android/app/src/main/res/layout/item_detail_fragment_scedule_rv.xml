<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/border_interest_recyclerv_item"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_margin="4dp"
    android:elevation="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_detail_fragment_schedule_dday_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D-3"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="@drawable/fragment_detail_schedule_background"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/item_detail_fragment_schedule_day_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5/21 (화)"
        android:fontFamily="@font/pretendard"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_detail_fragment_schedule_dday_tv"/>

    <TextView
        android:id="@+id/item_detail_fragment_schedule_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모의고사 풀이"
        android:textColor="#555555"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/item_detail_fragment_schedule_dday_tv"
        app:layout_constraintTop_toBottomOf="@id/item_detail_fragment_schedule_day_tv"/>

    <TextView
        android:id="@+id/item_detail_fragment_schedule_concrete_day_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fragment_detail_content_background"
        android:text="일시"
        android:fontFamily="@font/pretendard"
        android:textSize="11sp"
        android:textColor="#186AFF"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_detail_fragment_schedule_day_tv"/>

    <TextView
        android:id="@+id/item_detail_fragment_schedule_place_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fragment_detail_content_background"
        android:text="위치"
        android:textSize="11sp"
        android:fontFamily="@font/pretendard"
        android:textColor="#186AFF"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="60dp"
        app:layout_constraintTop_toBottomOf="@id/item_detail_fragment_schedule_concrete_day_tv"
        app:layout_constraintStart_toEndOf="@id/item_detail_fragment_schedule_day_tv"/>

    <TextView
        android:id="@+id/item_detail_fragment_schedule_concrete_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5/21 7:00pm"
        android:fontFamily="@font/pretendard"
        android:textColor="#555555"
        android:textSize="12sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/item_detail_fragment_schedule_concrete_day_tv"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_detail_fragment_schedule_concrete_place_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="투썸 플레이스 강남점"
        android:fontFamily="@font/pretendard"
        android:textColor="#555555"
        android:textSize="12sp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/item_detail_fragment_schedule_concrete_time_tv"
        app:layout_constraintStart_toEndOf="@id/item_detail_fragment_schedule_place_tv"/>






















</androidx.constraintlayout.widget.ConstraintLayout>