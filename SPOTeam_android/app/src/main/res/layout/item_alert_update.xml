<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="25dp"
    android:paddingStart="25dp"
    android:paddingBottom="25dp"
    android:background="@drawable/selector_background_alert">

   <ImageView
       android:id="@+id/alert_bell_iv"
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:src="@drawable/ic_update"
       android:paddingTop="8dp"
       android:paddingBottom="8dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <LinearLayout
       android:id="@+id/summary_ll"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="10dp"
       app:layout_constraintStart_toEndOf="@id/alert_bell_iv"
       app:layout_constraintTop_toTopOf="@id/alert_bell_iv">

      <TextView
          android:id="@+id/study_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="내 스터디"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:textSize="15sp"
          android:layout_marginEnd="4dp"/>

      <TextView
          android:id="@+id/category_type"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="'공지'"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:textSize="15sp"
          android:layout_marginEnd="5dp"/>

      <TextView
          android:id="@+id/alert_type"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="업데이트"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:textSize="15sp"/>
   </LinearLayout>

   <LinearLayout
       android:id="@+id/content_ll"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toStartOf="@id/summary_ll"
       app:layout_constraintTop_toBottomOf="@id/summary_ll">

      <TextView
          android:id="@+id/alert_content_1_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text= "123"
          android:textSize="14sp"
          android:layout_marginEnd="5dp"/>
      <TextView
          android:id="@+id/alert_content_2_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text= "456"
          android:textSize="14sp"
          android:layout_marginEnd="5dp"/>
      <TextView
          android:id="@+id/alert_content_3_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="14sp"
          android:text= "789" />

   </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>