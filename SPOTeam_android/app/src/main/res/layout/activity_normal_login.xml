<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_normal_login_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp">

        <TextView
            android:id="@+id/activity_normal_login_toolbar_tv"
            android:text="회원가입"
            android:fontFamily="@font/suit_bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    </androidx.appcompat.widget.Toolbar>


    <TextView
    android:id="@+id/activity_normal_login_greet_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/emailstart"
    android:textColor="@color/b500"
    android:textSize="16sp"
    android:lineSpacingExtra="8dp"
    android:fontFamily="@font/suit_bold"
    android:layout_marginTop="55dp"
    android:layout_marginStart="20dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/activity_normal_login_tb"/>




    <TextView
        android:id="@+id/activity_nomarl_login_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textColor="@color/black"
        android:textSize="13.3sp"
        android:fontFamily="@font/suit_bold"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_normal_login_greet_tv"/>

    <EditText
        android:id="@+id/activity_normal_login_name_input_et"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_weight="4"
        android:maxLines="1"
        android:padding="8.5dp"
        android:textColor="@color/black"
        android:textSize="13.3dp"
        android:fontFamily="@font/suit_bold"
        android:background="@drawable/normal_login_edittext_corner_rectangle"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_nomarl_login_name_tv"/>

    <TextView
        android:id="@+id/activity_email_verfication_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생년월일"
        android:textColor="@color/black"
        android:fontFamily="@font/suit_bold"
        android:textSize="13.3sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_normal_login_name_input_et"/>








    <LinearLayout
        android:id="@+id/activity_normal_login_birth_text_input_ll"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/activity_email_verfication_number_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/activity_normal_login_birth_text_input_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:maxLines="1"
            android:fontFamily="@font/suit_bold"
            android:textColor="@color/black"
            android:inputType="number"
            android:maxLength="6"
            android:padding="8.5dp"
            android:textSize="13dp"
            android:letterSpacing="0.5"
            android:background="@drawable/normal_login_edittext_corner_rectangle">
        </EditText>

        <TextView
            android:id="@+id/activity_normal_minus_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="-"
            android:textColor="#2D2D2D"
            android:textSize="20dp"
            android:layout_marginHorizontal="5dp"
            android:fontFamily="@font/suit_bold" />

        <EditText
            android:id="@+id/activity_normal_login_birth_behind_text_input_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:inputType="number"
            android:maxLength="1"
            android:padding="8.5dp"
            android:textSize="13dp"
            android:fontFamily="@font/suit_bold"
            android:textColor="@color/black"
            android:letterSpacing="0.4"
            android:background="@drawable/normal_login_edittext_corner_rectangle">
        </EditText>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_marginStart="3dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/circle_oval"
                android:layout_margin="5dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/circle_oval"
                android:layout_margin="5dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/circle_oval"
                android:layout_margin="5dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/circle_oval"
                android:layout_margin="5dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/circle_oval"
                android:layout_margin="5dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/circle_oval"
                android:layout_margin="5dp"/>

        </LinearLayout>


    </LinearLayout>



    <TextView
        android:id="@+id/activity_normal_login_password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:text="비밀번호"
        android:textColor="@color/black"
        android:textSize="13.3sp"
        android:visibility="gone"
        android:fontFamily="@font/suit_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_normal_login_birth_text_input_ll" />

    <EditText
        android:id="@+id/activity_normal_login_password_input_et"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:maxLines="1"
        android:padding="8.5dp"
        android:textColor="@color/black"
        android:textSize="13.3dp"
        android:visibility="gone"
        android:fontFamily="@font/suit_bold"
        android:background="@drawable/normal_login_edittext_corner_rectangle"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_normal_login_password_tv"/>

    <TextView
        android:id="@+id/activity_normal_login_password_error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="영문, 숫자 포함 10자 이상 입력해주세요."
        android:textColor="#8F8F99"
        android:visibility="gone"
        android:textSize="13.3dp"
        android:textFontWeight="600"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_normal_login_password_input_et" />

    <TextView
        android:id="@+id/activity_normal_login_password_check_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="비밀번호 확인"
        android:textColor="@color/black"
        android:textSize="13.3sp"
        android:visibility="gone"
        android:fontFamily="@font/suit_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_normal_login_password_input_et" />

    <EditText
        android:id="@+id/activity_normal_login_password_check_input_et"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:maxLines="1"
        android:padding="8.5dp"
        android:textColor="@color/black"
        android:textSize="13.3dp"
        android:visibility="gone"
        android:fontFamily="@font/suit_bold"
        android:background="@drawable/normal_login_edittext_corner_rectangle"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_normal_login_password_check_tv"/>







    <android.widget.Button
        android:id="@+id/activity_startlogin_loginwithspot_next_bt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:enabled="false"
        android:text="다음"
        android:textColor="@drawable/button_textcolor"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
