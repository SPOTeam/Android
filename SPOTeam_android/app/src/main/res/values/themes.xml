<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SPOTeam_android" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/active_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>

        <item name="android:fontFamily">@font/suit_variable</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/custom_chip</item>
        <item name="chipStrokeColor">@color/custom_chip_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">10dp</item>
        <item name="android:textColor">@color/custom_chip_text</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAppearance">@style/CustomChipTextAppearance</item>
    </style>
    <style name="CustomChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/suit_bold</item>
    </style>


    <style name="CustomChipCloseStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">#588FFE</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">10dp</item>
        <item name="android:textColor">#588FFE</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="closeIconTint">#588FFE</item>
        <item name="chipMinHeight">42dp</item>
        <item name="android:textAppearance">@style/CustomChipTextAppearance</item>
    </style>

    <style name="CustomChipthemeStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/custom_chip</item>
        <item name="chipStrokeColor">@color/custom_chip_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/custom_chip_text</item>
        <item name="android:textSize">16sp</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="RangeSliderStyle" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnBackground">@android:color/white</item>
        <item name="colorSurface">@color/black</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconSize">50dp</item> <!-- 아이콘 크기 -->
        <item name="itemTextAppearanceActive">@style/BottomNavigationActiveText</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationInactiveText</item>
        <item name="itemIconTint">@color/selector_nav_item_color</item> <!-- 아이콘 색상 -->
        <item name="itemTextColor">@color/selector_nav_item_color</item> <!-- 텍스트 색상 -->
        <item name="itemPaddingTop">0dp</item>
        <item name="itemPaddingBottom">0dp</item>
    </style>

    <!-- Active Text Appearance -->
    <style name="BottomNavigationActiveText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16sp</item> <!-- 활성화된 아이템의 글씨 크기 -->
    </style>

    <!-- Inactive Text Appearance -->
    <style name="BottomNavigationInactiveText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item> <!-- 비활성화된 아이템의 글씨 크기 -->
    </style>

    <style name="find_ChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/active_blue</item>
        <item name="chipStrokeColor">@color/active_blue</item>
        <!-- Chip의 테두리 두께 -->
        <item name="chipStrokeWidth">1dp</item>
        <item name="closeIconVisible">false</item>

        <!-- 텍스트와 테두리 간의 패딩 -->
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="textStartPadding">12dp</item>      <!-- 텍스트 시작 여백 -->
        <item name="textEndPadding">12dp</item>        <!-- 텍스트 끝 여백 -->
    </style>

    <!-- bottomSheetFragment border 20dp 전용 테마 -->
    <style name="AppBottomSheetDialogBorder20WhiteTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalBorder20WhiteStyle</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppModalBorder20WhiteStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheetfragment_style</item>
    </style>

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/active_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="searchIcon">@drawable/location_search_resize</item>
        <item name="submitBackground">@color/active_blue</item>
    </style>

    <style name="CustomChipStyle2" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/custom_chip</item>
        <item name="chipStrokeColor">@color/interest_custom_chip_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">12dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:textColor">@color/custom_chip_text</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:textAppearance">@style/CustomChipTextAppearance</item>
    </style>

    <style name="CustomChipCloseStyle2" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">#005BFF</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="android:textColor">#005BFF</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="closeIconTint">#005BFF</item>
        <item name="chipMinHeight">37dp</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:textAppearance">@style/CustomChipTextAppearance</item>
    </style>

    <style name="CustomChipthemeStyle2" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/custom_chip</item>
        <item name="chipStrokeColor">@color/interest_custom_chip_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/custom_chip_text</item>
        <item name="android:textSize">16sp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

