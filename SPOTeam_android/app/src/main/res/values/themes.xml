<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SPOTeam_android" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/custom_chip</item>
        <item name="chipStrokeColor">@color/custom_chip_stroke</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:textColor">@color/custom_chip_text</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>
    <style name="RangeSliderStyle" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnBackground">@android:color/white</item>
        <item name="colorSurface">@color/black</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconSize">24dp</item> <!-- 아이콘 크기 설정 -->
        <item name="itemTextAppearanceActive">@style/BottomNavigationViewTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationViewTextAppearance</item>
    </style>

    <!-- BottomNavigationView 텍스트 스타일 정의 -->
    <style name="BottomNavigationViewTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item> <!-- 텍스트 크기 설정 -->
    </style>

<!--    <style name="Theme.SPOT.NoActionBar">-->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
<!--    </style>-->

    <style name="Theme.SPOT.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SPOT.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>