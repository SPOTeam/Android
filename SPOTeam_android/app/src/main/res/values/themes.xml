<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SPOTeam_android" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/active_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/custom_chip</item>
        <item name="chipStrokeColor">@color/custom_chip_stroke</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:textColor">@color/custom_chip_text</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="CustomChipCloseStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">#588FFE</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:textColor">#588FFE</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="closeIconTint">#588FFE</item>
    </style>


    <style name="RangeSliderStyle" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnBackground">@android:color/white</item>
        <item name="colorSurface">@color/black</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconSize">50dp</item> <!-- 아이콘 크기 -->
        <item name="itemTextAppearanceActive">@style/BottomNavigationActiveText</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationInactiveText</item>
        <item name="itemIconTint">@color/selector_nav_item_color</item> <!-- 아이콘 색상 -->
        <item name="itemTextColor">@color/selector_nav_item_color</item> <!-- 텍스트 색상 -->
        <item name="itemPaddingTop">0dp</item>
        <item name="itemPaddingBottom">0dp</item>
    </style>

    <!-- Active Text Appearance -->
    <style name="BottomNavigationActiveText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16sp</item> <!-- 활성화된 아이템의 글씨 크기 -->
    </style>

    <!-- Inactive Text Appearance -->
    <style name="BottomNavigationInactiveText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item> <!-- 비활성화된 아이템의 글씨 크기 -->
    </style>

