    <style name="Theme.SPOT.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SPOT.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ShapeAppearanceOverlay.App.CornerFamily.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerFamily.Cut1" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerFamily.Cut2" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.SPOTeam_android.SplashScreen" parent="Theme.SplashScreen">
        <!-- 스플래쉬 화면 배경 색 -->
        <item name="windowSplashScreenBackground">@color/button_enabled_text</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <!-- 아이콘 크기 조절 -->
        <item name="postSplashScreenTheme">@style/Theme.SPOTeam_android</item>
    </style>

    <style name="CustomTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@drawable/my_date_text_color</item>
    </style>

    <style name="CustomDateTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/suit_semi_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13dp</item> <!-- 텍스트 크기 -->
    </style>

    <style name="CustomCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/custom_checkbox</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#F9FBFF</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/custom_popup_background</item>
    </style>


    <style name="MyDatePickerTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <!-- 배경색 변경 -->
        <item name="android:windowBackground">@color/white</item>
        <!-- 버튼 색상 -->
        <item name="colorPrimary">@color/b400</item>
        <item name="colorSecondary">@color/b400</item>
    </style>


    <style name="MyTimePickerTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <!-- 버튼 색상 -->
        <item name="colorPrimary">@color/b400</item>
        <item name="colorSecondary">@color/b400</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/suit_semi_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CalendarTitleTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/suit_bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/g500</item>
    </style>

    <style name="CalendarWeekDayTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/suit_semi_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Widget.My.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:overlapAnchor">false</item>
        <item name="overlapAnchor"> false</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:background">@drawable/gender_spinner_background</item>
    </style>

    <style name="SquareChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="shapeAppearance">@style/ShapeAppearance.SquareChip</item>
    </style>

    <style name="ShapeAppearance.SquareChip" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">8dp</item> <!-- 네 모서리 모두 0dp로 설정 -->
    </style>

    <style name="InterestBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/InterestBottomSheet</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item> <!-- 여기가 투명도 -->
    </style>

    <style name="InterestBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottomdialog</item>
    </style>

</resources>