<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" tools:ignore="StateListReachable">
    <!-- Default state -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent"/>
                    <stroke android:color="@color/g200" android:width="1dp"/>
                    <corners android:radius="11dp"/>
                </shape>
            </item>
            <!-- Inset to reduce the size of the drawable -->
            <item android:drawable="@drawable/spinner_arrow_up"
                android:width="10dp"
                android:height="6dp"
                android:end="10dp"
                android:gravity="center|end"/>
        </layer-list>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#E0E0E0"/>
                    <stroke android:color="#F1F3F5" android:width="1dp"/>
                    <corners android:radius="8dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
