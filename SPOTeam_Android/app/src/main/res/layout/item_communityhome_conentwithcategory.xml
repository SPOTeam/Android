<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/content_index_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="합격후기"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/selector_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/content_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카카오 최종 합격 후기"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/content_index_tv" />

    <TextView
        android:id="@+id/content_bracket_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="("
        android:textSize="20sp"
        android:textColor="@color/selector_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/content_commentNum_tv"/>
    <TextView
        android:id="@+id/content_commentNum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="20sp"
        android:textColor="@color/selector_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/content_bracket_R"/>
    <TextView
        android:id="@+id/content_bracket_R"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=")"
        android:textSize="20sp"
        android:textColor="@color/selector_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>